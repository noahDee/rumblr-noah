<%= erb :nav %>

<div class="container">

<button id="option"class="delete-button"type="button" name="delete-account">Delete Account</button>
<button id="option"class="tags-button"type="button" name="add-tags">Add Tags</button>
<button id="option"class="photo-button"type="button" name="change-photo">Change Photo</button>


<form class="hidden delete-form" action="/settings" method="post">
  <h1>Delete Your Account?</h1>
  <p>Doing so will permanantly delete all your info and posts</p>
  <input type="submit" name="delete" value="Delete Account">
  <button type="button" name="cancel">Cancel</button>
</form>

<form class="hidden tags-form" action="/addtags" method="post">
  <h1>Add Tags</h1>
  <p>Seperate each tag by a comma</p>
  <textarea name="tags" rows="8" cols="80"placeholder="tag1,tag2,tag3"></textarea>
  <input type="submit" value="Submit">
  <button type="button" name="cancel">Cancel</button>
</form>

<form class="hidden photo-form" action="/changephoto" method="post">
  <label>Choose your avitar</label><br>
  <div class="grid">

    <div class="">
